<div class="d-flex">
    <img src="@CartItem!.PictureURL" />
    <div class="d-flex flex-column ms-3">
        <div class="d-flex flex-column">
            <h3>@CartItem!.Name</h3>
            <p>@CartItem!.Description</p>
            <table class="table mb-0">
              <tbody>
                    <tr><td class="border-0 p-0">Size</td><td class="border-0 p-0"><div class="ms-2 badge text-bg-light rounded-0 fw-normal">@CartItem.Size.Name</div></td></tr>
                    <tr><td class="border-0 p-0">Color</td><td class="border-0 p-0"><div class="ms-2 badge rounded-0 fw-normal" style="background-color:@CartItem.Color.BGColor; color:@CartItem.Color.TextColor">@CartItem.Color.Name</div></td></tr>
                    <tr><td class="border-0 p-0">Price</td><td class="border-0 p-0">123.25</td></tr>
              </tbody>
            </table>
        </div>
        <button class="btn btn-danger btn-sm mt-2" @onclick="RemoveItem">Remove</button>
    </div>
</div>

@code {
    [Parameter] public CartItemDTO? CartItem { get; set; }
    [Parameter] public EventCallback<CartItemDTO?> OnRemoveItem { get; set; }

    void RemoveItem()
    {
        if (OnRemoveItem.HasDelegate)
            OnRemoveItem.InvokeAsync(CartItem);
    }
}
